<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lilysamimi.famcamproject.profile"
    android:background="#ffffff"
    android:padding="20dp">

     <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECORD"
            android:id="@+id/button_camera"
            android:textColor="#FFFFFF"
            android:background="#64C73A"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:onClick="dispatchTakePictureIntent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/woman2"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grandma Tata"
        android:id="@+id/textView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="32dp"
        android:textSize="22dp"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm cooking pumpkin pie for you all next time. Love you !"
        android:id="@+id/textView2"
        android:layout_toEndOf="@+id/imageView"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_camera"
        android:contentDescription="@string/image_cd_camera"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Family"
        android:id="@+id/button2"
        android:textColor="#FFFFFF"
        android:background="#2A2E7B"
        android:clickable="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:onClick="openMyFamily"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
