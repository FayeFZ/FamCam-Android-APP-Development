<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lilysamimi.famcamproject.NewUserLogin">

    <TextView
        android:text="Let's get started! Enter your information below to find your family members."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="First Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <TextView
        android:text="Last Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <TextView
        android:text="Phone Number -Provide your phone number so that other family members can find you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <TextView
        android:text="Enter Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />

    <TextView
        android:text="Confirm Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/button"
        android:layout_marginBottom="63dp"
        android:background="#2A2E7B"
        android:clickable="true"
        android:onClick="openAddFamilyMember"
        android:textColor="#ffffff"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:textAlignment="center"
        android:enabled="true"
        android:focusable="true"
        android:layout_gravity="center"/>

</LinearLayout>
